<h1>Editing item <%= link_to @item.name, @item %></h1>
<div class="row">
  <%= form_for(@item) do |f| %>
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.label :price %>
      <%= f.number_field :price, class: 'form-control' %>

      <%= f.label :active %>
      <%= f.select(:active, [['True', 'true'],['False', 'false']], {}, 
                   { class: 'form-dropdown' })%>

      <%= f.label :category %>
      <%= f.select(:categories, all_categories.map {|c| [c.name, c.id]}, {}, 
                   { :class => 'form-dropdown' })%>

      <%= f.submit "Edit item", class: "btn btn-primary" %>
    <% end %>
</div>
