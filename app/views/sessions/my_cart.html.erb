<nav class="navbar navbar-default navbar-fixed-top navbar-brand second-navbar">
  <div class="container-fluid">
    Carrinho de compras
  </div>
</nav>
<div class="cart-table">
  <% if @my_cart.empty? %>
    <div class="alert alert-info">
      Seu carrinho esta vazio!
    </div>
  <% else %>
    <table class="table table-hover table-bordered">
      <thead>
        <th>Item</th>
        <th>Price</th>
        <th>Quantity</th>

        <tr>
          <td> AJUSTE OS ATRIBUTOS DA TABELA EM
            app/views/sessions/my_cart.html.erb</td>
        </tr>
        <!-- WATCH OUT FOR THE if false COMMENT BLOCK -->
        <% if false %>
          <%= @my_cart.each do |item| %>
            <tr>
              <td><%= item.name %></td>
              <td><%= item.price %></td>
              <td><%= item.qntd %></td>
            </tr>
          <% end %>
        <% end %>
    </table>
  <% end %>
</div>
